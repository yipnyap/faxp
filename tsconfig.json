{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react-jsx",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/renderer.ts",
    "src/components/**/*",
    "services/**/*",
  ]
}